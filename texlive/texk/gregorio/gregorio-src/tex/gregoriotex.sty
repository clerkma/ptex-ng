	{\scshape #1}%
	\relax %
}

\def\GreBold#1{%
	{\bfseries #1}%
	\relax %
}

\def\GreTypewriter#1{%
	{\ttfamily #1}%
	\relax %
}

\def\GreUnderline#1{%
	\underline{#1}%
	\relax %
}

\def\GreColored#1{%
	{%
		\color{gregoriocolor}#1%
	}%
}


\def\gresetlinecolor#1{%
	\gre@changestyle{normalstafflines}{\color[named]{#1}}[\relax]%
}


